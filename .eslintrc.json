{
  "root": true,
  "ignorePatterns": ["projects/**/*", "*.md", "*.json", ".yml", "*.yaml", "*.config.js", "*.config.ts", "*.spec.ts"],
  "plugins": ["sonarjs"],
  "extends": ["airbnb-base", "airbnb-typescript/base", "plugin:sonarjs/recommended"],
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": "latest"
  },
  "env": {
    "es6": true
  },
  "rules": {
    "import/prefer-default-export": "off"
  },
  "overrides": []
}
